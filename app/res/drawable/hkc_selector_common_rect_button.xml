<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 被选中的样式 -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/hkc_detail_left_button_pressed" />
            <corners android:radius="@dimen/hkc_button_radius" />
        </shape>
    </item>
    <!-- 被按下的样式-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/hkc_detail_left_button_pressed" />
            <corners android:radius="@dimen/hkc_button_radius" />
        </shape>
    </item>
    <!-- 常态的样式 -->
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/hkc_color9" />
            <corners android:radius="@dimen/hkc_button_radius" />
        </shape>
    </item>
</selector>