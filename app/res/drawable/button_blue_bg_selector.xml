<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/general_button_bg_pressed"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/cscollection_button_hollow_normal_bg_color"/>
            <corners android:radius="4dp"/>
            <stroke android:width="1px" android:color="@color/cscollection_button_hollow_stroke_color"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/general_button_bg_enable"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

</selector>