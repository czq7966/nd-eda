<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 被选中的样式 -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/hkc_color7" />
            <stroke android:width="1dp" android:color="@color/hkc_color14" />
        </shape>
    </item>
    <!-- 被按下的样式-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/hkc_color7" />
            <stroke android:width="1dp" android:color="@color/hkc_color14" />
        </shape>
    </item>
    <!-- 常态的样式 -->
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/hkc_color7" />
            <stroke android:width="1dp" android:color="@color/hkc_color9" />
        </shape>
    </item>
</selector>